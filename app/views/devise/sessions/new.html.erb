<div class="text-center custom-orange-bg fitness-font">
  <div class="d-flex justify-content-center custom-orange-bg">
    <div class="custom-orange-bg">
      <br/>
      <h2 class="text-center mb-4">Log in</h2>
      <br/>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
        <div class="form-inputs">
          <div class="mb-3">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: 'form-control sans-font' },
                        label_html: { class: 'form-label' } %>
          </div>
          <div class="mb-3">
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class: 'form-control sans-font', id: 'password' },
                        label_html: { class: 'form-label' } %>
            <button type="button" class="btn btn-secondary btn-sm mt-2" onclick="togglePasswordVisibility('password')">Show/Hide Password</button>
          </div>
          <div class="form-check mb-3">
            <%= f.input :remember_me, as: :boolean, input_html: { class: 'form-check-input' }, label_html: { class: 'form-check-label' } if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Log in", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
