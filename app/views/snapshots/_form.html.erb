<%= simple_form_for(@snapshot) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="form-group">
      <%= f.label :user, "User Email" %>
      <p><%= @snapshot.user.email %></p>
      <%= f.hidden_field :user_id, value: @snapshot.user_id %>
    </div>
    <%= f.input :weightLbs, label: "Weight (lbs)" %>
    <%= f.input :heightFeet, label: "Height (feet)" %>
    <%= f.input :heightInches, label: "Height (inches)" %>
    <%= f.input :goal_weight_lbs, label: "Goal Weight (lbs)" %>

   <%= f.input :activity_level, as: :select, collection: [
      ["Sedentary (little or no exercise)", "sedentary"],
      ["Lightly active (light exercise/sports 1-3 days/week)", "lightly_active"],
      ["Moderately active (moderate exercise/sports 3-5 days/week)", "moderately_active"],
      ["Very active (hard exercise/sports 6-7 days a week)", "very_active"],
      ["Super active (very hard exercise/sports & physical job or training twice a day)", "super_active"]
    ], label: "Activity Level" %>


    <%= f.input :goal_weight_kg %>
    <%= f.input :predicted_time_weeks %>
    <%= f.input :calorie_deficit_or_surplus_per_day, label: "Calorie Deficit/Surplus per Day" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
