<div class="text-center custom-rose-red-bg">
  <div class="d-flex justify-content-center custom-rose-red-bg">
    <div class="col-md-4 mb-4 custom-rose-red-bg">
      <div class="card custom-red-border custom-rose-red-bg">
        <div class="card-body text-center">
          <%= render partial: 'snapshot', locals: { snapshot: @snapshot, weightLbs: (@snapshot.weight_kg / 0.453592).round(0), height_feet: (@snapshot.height_cm / 30.48).to_i, height_inches: ((@snapshot.height_cm / 2.54) % 12).round(1), goal_weight_lbs: (@snapshot.goal_weight_kg / 0.453592).round(0) } %>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= link_to "Back to snapshots", snapshots_path, class: "btn btn-primary mx-2" %>
    <%= button_to "Destroy this snapshot", @snapshot, method: :delete, class: "btn btn-danger mx-2" %>
    <%= link_to "Create new snapshot", new_snapshot_path, class: "btn btn-success mx-2" %>
  </div>
</div>
