<%= form_with(model: workout_routine, local: true) do |form| %>
  <% if workout_routine.errors.any? %>
    <div id="error_explanation" class="alert alert-danger mt-3">
      <h4 class="alert-heading"><%= pluralize(workout_routine.errors.count, "error") %> prevented this workout routine from being saved:</h4>
      <ul class="mb-0">
        <% workout_routine.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card mt-4 shadow-sm">
    <div class="card-body">

      <h3 class="fitness-font mb-4 text-center">Move with Purpose.</h3>

      <div class="mb-3">
        <%= form.label :name, "Workout Routine Name", class: "form-label fw-bold" %>
        <%= form.text_field :name, class: 'form-control text-center text-center-placeholder', placeholder: "Enter the name of the workout routine" %>
      </div>

      <div class="mb-3">
        <%= form.label :mood, "Mood (1-10)", class: "form-label fw-bold" %>
        <small class="form-text text-muted mb-2 d-block">
          1 – Poor: Experiencing stress, irritability, or low motivation.<br>
          10 – Excellent: Feeling positive, relaxed, and highly motivated.
        </small>
        <%= form.number_field :mood, class: 'form-control text-center text-center-placeholder', min: 1, max: 10, placeholder: "Rate your Mood" %>
      </div>

      <div class="mb-3">
        <%= form.label :sleep_quality, "Sleep Quality (1-10)", class: "form-label fw-bold" %>
        <small class="form-text text-muted mb-2 d-block">
          1 – Poor: Restless sleep, frequent waking, or feeling unrefreshed.<br>
          10 – Excellent: Deep, uninterrupted sleep with full restfulness.
        </small>
        <%= form.number_field :sleep_quality, class: 'form-control text-center text-center-placeholder', min: 1, max: 10, placeholder: "Rate your Sleep Quality" %>
      </div>

      <div class="mb-3">
        <%= form.label :soreness, "Soreness (1-10)", class: "form-label fw-bold" %>
        <small class="form-text text-muted mb-2 d-block">
          1 – None: Muscles feel fully recovered and fresh.<br>
          10 – Severe: Intense muscle discomfort, limiting movement or performance.
        </small>
        <%= form.number_field :soreness, class: 'form-control text-center text-center-placeholder', min: 1, max: 10, placeholder: "Rate your Soreness" %>
      </div>

      <%= form.submit "Save Workout Routine", class: 'btn btn-primary mt-3 w-100' %>
    </div>
  </div>
<% end %>
